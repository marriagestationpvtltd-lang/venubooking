# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=venubooking
DB_USER=root
DB_PASS=

# Application Configuration
APP_NAME="Venue Booking System"
APP_URL=http://localhost/venubooking
APP_TIMEZONE=Asia/Kathmandu

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls
EMAIL_FROM_ADDRESS=noreply@venubooking.com
EMAIL_FROM_NAME="Venue Booking System"

# Upload Configuration
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif

# Currency & Tax
CURRENCY=NPR
CURRENCY_SYMBOL="Rs. "
TAX_RATE=13

# Booking Settings
ADVANCE_PAYMENT_PERCENTAGE=30
BOOKING_BUFFER_DAYS=1
MAX_ADVANCE_BOOKING_DAYS=365

# Security
SESSION_LIFETIME=7200
CSRF_TOKEN_NAME=csrf_token

# File Paths
UPLOAD_PATH_VENUES=uploads/venues/
UPLOAD_PATH_HALLS=uploads/halls/
UPLOAD_PATH_MENUS=uploads/menus/
